    <header>
        @RenderSection("Header")
    </header>
    @RenderBody()
    <div id="maindiv">
        <table>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="9%"  class ="tdrightalign">@item.Time.ToString("HH:mm")</td>
                    <td width="18%">@item.Name</td>
                    <td><img width="120" src="@item.CompanyLogoPath" alt="@item.Company" /></td>
                    <td>@item.City</td>
                    <td width="4%" class="tdcenteralign">@item.Terminal</td>
                    <td width="21%">@item.Status</td>
                </tr>
            }
        </table>
