<Window x:Name="mainWindow" x:Class="AirportTimetableWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportTimetableWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="105" Width="1920" Background="#FF272727"/>
        <Label Content="Вылеты" Margin="0,19,0,0" Foreground="White" FontSize="40" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <local:TimeTableColumn x:Name="firstColumn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,110,0,0"/>
        <local:TimeTableColumn x:Name="secondColumn" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0"/>
        <local:TimeTableColumn x:Name="thirdColumn" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,110,0,0"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="70" Width="1920" Background="#FF272727"/>
        <Label x:Name="date" Margin="20,0,0,10" Foreground="White" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Label x:Name="time" Margin="0,0,20,10" Foreground="White" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
